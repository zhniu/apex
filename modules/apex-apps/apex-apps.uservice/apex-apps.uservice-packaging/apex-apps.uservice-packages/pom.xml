<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>apex-apps.uservice-packages</artifactId>
	<name>${project.artifactId}</name>
	<url>${apex.site.prefix}/modules/apex-apps/apex-apps.uservice/${project.parent.artifactId}/${project.artifactId}/</url>
	<description>This module is a library used to hold all the various Apex packages in a single place in the repository</description>
	<inceptionYear>2017</inceptionYear>
	<packaging>pom</packaging>

	<parent>
		<groupId>com.ericsson.apex</groupId>
		<artifactId>apex-apps.uservice-packaging</artifactId>
		<version>0.7.0</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<distributionManagement>
		<site>
			<id>${project.artifactId}-site</id>
			<url>${project.url}</url>
		</site>
	</distributionManagement>

	<dependencies>
		<dependency>
			<groupId>com.ericsson.apex</groupId>
			<artifactId>apex-apps.uservice-package-minimal</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.ericsson.apex</groupId>
			<artifactId>apex-apps.uservice-package-full</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>apexPackageDefault</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>copy-artifact</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>copy</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>${project.groupId}</groupId>
											<artifactId>apex-apps.uservice-package-minimal</artifactId>
											<version>${project.version}</version>
											<classifier>tarball</classifier>
											<type>tar.gz</type>
											<destFileName>${project.artifactId}-${project.version}-minimal.tar.gz</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>${project.groupId}</groupId>
											<artifactId>apex-apps.uservice-package-minimal</artifactId>
											<version>${project.version}</version>
											<type>deb</type>
											<destFileName>${project.artifactId}-${project.version}-minimal.deb</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>${project.groupId}</groupId>
											<artifactId>apex-apps.uservice-package-full</artifactId>
											<version>${project.version}</version>
											<classifier>tarball</classifier>
											<type>tar.gz</type>
											<destFileName>${project.artifactId}-${project.version}-full.tar.gz</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>${project.groupId}</groupId>
											<artifactId>apex-apps.uservice-package-full</artifactId>
											<version>${project.version}</version>
											<type>deb</type>
											<destFileName>${project.artifactId}-${project.version}-full.deb</destFileName>
										</artifactItem>
									</artifactItems>
									<outputDirectory>${project.build.directory}</outputDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>build-helper-maven-plugin</artifactId>
						<version>3.0.0</version>
						<executions>
							<execution>
								<id>attach-artifacts</id>
								<phase>package</phase>
								<goals>
									<goal>attach-artifact</goal>
								</goals>
								<configuration>
									<artifacts>
										<artifact>
											<file>${project.build.directory}/${project.artifactId}-${project.version}-minimal.tar.gz</file>
											<classifier>minimal</classifier>
											<type>tar.gz</type>
										</artifact>
										<artifact>
											<file>${project.build.directory}/${project.artifactId}-${project.version}-minimal.deb</file>
											<classifier>minimal</classifier>
											<type>deb</type>
										</artifact>
										<artifact>
											<file>${project.build.directory}/${project.artifactId}-${project.version}-full.tar.gz</file>
											<classifier>full</classifier>
											<type>tar.gz</type>
										</artifact>
										<artifact>
											<file>${project.build.directory}/${project.artifactId}-${project.version}-full.deb</file>
											<classifier>full</classifier>
											<type>deb</type>
										</artifact>
									</artifacts>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>Linux</id>
			<activation>
				<os>
					<family>Linux</family>
				</os>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>copy-artifact</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>copy</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>${project.groupId}</groupId>
											<artifactId>apex-apps.uservice-package-minimal</artifactId>
											<version>${project.version}</version>
											<classifier>tarball</classifier>
											<type>tar.gz</type>
											<destFileName>${project.artifactId}-${project.version}-minimal.tar.gz</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>${project.groupId}</groupId>
											<artifactId>apex-apps.uservice-package-minimal</artifactId>
											<version>${project.version}</version>
											<type>deb</type>
											<destFileName>${project.artifactId}-${project.version}-minimal.deb</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>${project.groupId}</groupId>
											<artifactId>apex-apps.uservice-package-minimal</artifactId>
											<version>${project.version}</version>
											<type>rpm</type>
											<destFileName>${project.artifactId}-${project.version}-minimal.rpm</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>${project.groupId}</groupId>
											<artifactId>apex-apps.uservice-package-full</artifactId>
											<version>${project.version}</version>
											<classifier>tarball</classifier>
											<type>tar.gz</type>
											<destFileName>${project.artifactId}-${project.version}-full.tar.gz</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>${project.groupId}</groupId>
											<artifactId>apex-apps.uservice-package-full</artifactId>
											<version>${project.version}</version>
											<type>deb</type>
											<destFileName>${project.artifactId}-${project.version}-full.deb</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>${project.groupId}</groupId>
											<artifactId>apex-apps.uservice-package-full</artifactId>
											<version>${project.version}</version>
											<type>rpm</type>
											<destFileName>${project.artifactId}-${project.version}-full.rpm</destFileName>
										</artifactItem>
									</artifactItems>
									<outputDirectory>${project.build.directory}</outputDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>build-helper-maven-plugin</artifactId>
						<version>3.0.0</version>
						<executions>
							<execution>
								<id>attach-artifacts</id>
								<phase>package</phase>
								<goals>
									<goal>attach-artifact</goal>
								</goals>
								<configuration>
									<artifacts>
										<artifact>
											<file>${project.build.directory}/${project.artifactId}-${project.version}-minimal.tar.gz</file>
											<classifier>minimal</classifier>
											<type>tar.gz</type>
										</artifact>
										<artifact>
											<file>${project.build.directory}/${project.artifactId}-${project.version}-minimal.deb</file>
											<classifier>minimal</classifier>
											<type>deb</type>
										</artifact>
										<artifact>
											<file>${project.build.directory}/${project.artifactId}-${project.version}-minimal.rpm</file>
											<classifier>minimal</classifier>
											<type>rpm</type>
										</artifact>
										<artifact>
											<file>${project.build.directory}/${project.artifactId}-${project.version}-full.tar.gz</file>
											<classifier>full</classifier>
											<type>tar.gz</type>
										</artifact>
										<artifact>
											<file>${project.build.directory}/${project.artifactId}-${project.version}-full.deb</file>
											<classifier>full</classifier>
											<type>deb</type>
										</artifact>
										<artifact>
											<file>${project.build.directory}/${project.artifactId}-${project.version}-full.rpm</file>
											<classifier>full</classifier>
											<type>rpm</type>
										</artifact>
									</artifacts>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
