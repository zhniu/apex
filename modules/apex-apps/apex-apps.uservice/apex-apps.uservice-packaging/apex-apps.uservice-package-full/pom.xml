									<artifactId>apex-auth.cli-editor</artifactId>
									<version>${project.version}</version>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${project.build.directory}</outputDirectory>
									<includes>etc/**/*,examples/**/*</includes>
								</artifactItem>
								<artifactItem>
									<groupId>com.ericsson.apex</groupId>
									<artifactId>apex-domains.aadm</artifactId>
									<version>${project.version}</version>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${project.build.directory}</outputDirectory>
									<includes>etc/**/*,examples/**/*</includes>
								</artifactItem>
								<artifactItem>
									<groupId>com.ericsson.apex</groupId>
									<artifactId>apex-domains.myfirstpolicy</artifactId>
									<version>${project.version}</version>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${project.build.directory}</outputDirectory>
									<includes>etc/**/*,examples/**/*</includes>
								</artifactItem>
								<artifactItem>
									<groupId>com.ericsson.apex</groupId>
									<artifactId>apex-domains.adaptive</artifactId>
									<version>${project.version}</version>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${project.build.directory}</outputDirectory>
									<includes>etc/**/*,examples/**/*</includes>
								</artifactItem>
								<artifactItem>
									<groupId>com.ericsson.apex</groupId>
									<artifactId>apex-domains.vpn-java</artifactId>
									<version>${project.version}</version>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${project.build.directory}</outputDirectory>
									<includes>etc/**/*,examples/**/*</includes>
								</artifactItem>
								<artifactItem>
									<groupId>com.ericsson.apex</groupId>
									<artifactId>apex-domains.vpn-avro</artifactId>
									<version>${project.version}</version>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${project.build.directory}</outputDirectory>
									<includes>etc/**/*,examples/**/*</includes>
								</artifactItem>
								<artifactItem>
									<groupId>com.ericsson.apex</groupId>
									<artifactId>apex-plugins.executor-testdomain</artifactId>
									<version>${project.version}</version>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${project.build.directory}</outputDirectory>
									<includes>etc/**/*,examples/**/*</includes>
								</artifactItem>
								<artifactItem>
									<groupId>com.ericsson.apex</groupId>
									<artifactId>apex-apps.utilities</artifactId>
									<version>${project.version}</version>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${project.build.directory}/etc</outputDirectory>
									<includes>/app-version.txt</includes>
								</artifactItem>
							</artifactItems>
							<overWriteReleases>true</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
					<execution>
						<id>copy-fat-jars</id>
						<phase>package</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>com.ericsson.apex</groupId>
									<artifactId>apex-apps.wsclients-simple</artifactId>
									<version>${project.version}</version>
									<type>jar</type>
									<classifier>jar-with-dependencies</classifier>
									<outputDirectory>${project.build.directory}/lib/applications</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>com.ericsson.apex</groupId>
									<artifactId>apex-services.client-monitoring</artifactId>
									<version>${project.version}</version>
									<classifier>monitoring</classifier>
									<outputDirectory>${project.build.directory}/lib/applications</outputDirectory>
